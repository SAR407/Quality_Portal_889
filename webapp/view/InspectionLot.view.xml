<mvc:View controllerName="qualityportal.controller.InspectionLot"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m" xmlns:core="sap.ui.core"
    xmlns:html="http://www.w3.org/1999/xhtml">
    <Page showHeader="true" title="INSPECTION LOTS" class="sapUiContentPadding" showNavButton="true" navButtonPress=".onNavBack">
        <content>
            <VBox class="antiGravityCard sapUiSmallMargin">
                <Table id="inspectionTable" 
                    items="{inspectionModel>/ZCDS_QP_INSPECTION_889}" 
                    class="glassList"
                    growing="true" growingThreshold="20"
                    mode="SingleSelectMaster" itemPress=".onPressLot">
                    
                    <columns>
                        <Column><Text text="Lot #" class="glowText"/></Column>
                        <Column><Text text="Material" class="glowText"/></Column>
                        <Column minScreenWidth="Tablet" demandPopin="true"><Text text="Plant" class="glowText"/></Column>
                        <Column minScreenWidth="Tablet" demandPopin="true"><Text text="Quantity" class="glowText"/></Column>
                        <Column><Text text="Status" class="glowText"/></Column>
                    </columns>
                    
                    <items>
                        <ColumnListItem type="Active">
                            <cells>
                                <ObjectIdentifier title="{inspectionModel>InspectionLot}" text="{inspectionModel>InspectionType}"/>
                                <ObjectIdentifier title="{inspectionModel>MaterialNumber}" text="{inspectionModel>MaterialDesc}"/>
                                <Text text="{inspectionModel>Plant}"/>
                                <ObjectNumber number="{inspectionModel>LotQuantity}" unit="{inspectionModel>UoM}"/>
                                <ObjectStatus text="{path: 'inspectionModel>UsageDecisionCode', formatter: '.formatter.statusText'}" 
                                              state="{path: 'inspectionModel>UsageDecisionCode', formatter: '.formatter.statusState'}"
                                              inverted="true"/>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </VBox>
        </content>
    </Page>
</mvc:View>
